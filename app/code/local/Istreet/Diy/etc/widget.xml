<?xml version="1.0"?>
<widgets>
    <diy_slider type="diy/slider" translate="name description" module="diy">
        <name>Slider</name>
        <description type="desc">Slider</description>
        <parameters>
            <slides>
                <label>Slides</label>
                <visible>1</visible>
                <required>1</required>
                <type>text</type>
                <value>1</value>
            </slides>

            <template>
                <required>1</required>
                <visible>1</visible>
                <label>Template</label>
                <type>select</type>
                <value>diy/index.phtml</value>
                <values>
                    <default translate="label">
                        <value>diy/index.phtml</value>
                        <label>Full screen slider</label>
                    </default>
                    <stacked translate="label">
                        <value>diy/slider/stacked.phtml</value>
                        <label>Image Stacked on top of each other</label>
                    </stacked>
                </values>
            </template>
        </parameters>
    </diy_slider>

    <diy_categories type="diy/category_list" translate="name description" module="diy">
        <name>Category List</name>
        <description type="desc">List selected categories</description>
        <parameters>
            <categories>
                <label>Categories, comma separated ID list</label>
                <visible>1</visible>
                <required>1</required>
                <type>text</type>
                <value>1</value>
            </categories>

            <template>
                <required>1</required>
                <visible>1</visible>
                <label>Template</label>
                <type>select</type>
                <value>diy/category/list.phtml</value>
                <values>
                    <default translate="label">
                        <value>diy/category/list.phtml</value>
                        <label>Landing Page Category Lists</label>
                    </default>
                </values>
            </template>
        </parameters>
    </diy_categories>
</widgets>